<!DOCTYPE html>
<html>
<head>
  <meta charset="utf-8">
  <title>Skirt and Shorts Length Calculator</title>
</head>
<body>
  <h1>Skirt and Shorts Length Calculator</h1>
  
  <label for="lengthInput">Enter length:</label>
  <input type="number" id="lengthInput">
  
  <div>
    <input type="radio" id="option-long" name="option" value="long">
    <label for="option-long">Long skirt</label>
  </div>
  <div>
    <input type="radio" id="option-short" name="option" value="short">
    <label for="option-short">Shorts</label>
  </div>
  
  <button id="calculateBtn">Calculate</button>
  
  <p>Result: <input type="text" id="result" disabled></p>
  
  <script>
    const golden_ratio = (Math.sqrt(5) + 1) / 2;
    const lengthInput = document.getElementById("lengthInput");
    const calculateBtn = document.getElementById("calculateBtn");
    const resultInput = document.getElementById("result");

    // Function to check if a length is valid
    function isValidLength(length) {
      return !isNaN(length) && length > 0;
    }

    // Function to calculate the length based on the selected option and length value
    function calculateLength() {
      let length = parseFloat(lengthInput.value);
      let skirtLength;
      
      if (document.getElementById("option-long").checked) {
        skirtLength = length / golden_ratio;
      } else if (document.getElementById("option-short").checked) {
        skirtLength = length / (golden_ratio * golden_ratio);
      }
      
      resultInput.value = skirtLength.toFixed(2);
    }

    // Event listener for calculate button
    calculateBtn.addEventListener("click", calculateLength);
  </script>
</body>
</html>
